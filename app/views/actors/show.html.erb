<div class="page-header">
  <h3>Actor #<%= @actor.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @actor.name %></dd>

      <dt>Dob</dt>
      <dd><%= @actor.dob %></dd>

      <dt>Bio</dt>
      <dd><%= @actor.bio %></dd>

      <dt>Image url</dt>
      <dd><%= @actor.image_url %></dd>

      <dt>Number of character</dt>
      <dd><%= @actor.characters.count %></dd>

      <dt>Character names</dt>
      <dd><%= @actor.characters.pluck(:name).join(", ") %></dd>

      <dt>Filmography</dt>
      <dd>
      <% films = [] %>
      <% @actor.characters.each do |movie| %>
      <% films = films + @movies.where({ :id => movie.movie_id}).pluck(:title) %>
      <% end %>
      <%= films.join(", ") %>
      </dd>

    </dl>



    <div class="btn-group btn-group-justified">
      <a href="/actors" class="btn btn-primary">
        Back
      </a>
      <a href="/actors/<%= @actor.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_actor/<%= @actor.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
